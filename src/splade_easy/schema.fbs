// src/splade_easy/schema.fbs

namespace SpladeEasy;

table TokenWeight {
  token_id: uint;
  weight: float;
}

table KeyValue {
  key: string;
  value: string;
}

table Document {
  doc_id: string (required);
  text: string (required);
  metadata: [KeyValue];
  sparse_vector: [TokenWeight] (required);
}

root_type Document;
